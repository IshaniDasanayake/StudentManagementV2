@model IEnumerable<StudentManagement.Models.Student>

@{
    ViewBag.Title = "AL Tuition";
}

<h2>Students</h2>

<p>
    @Html.ActionLink("Add Student", "Create")
</p>

@using (Html.BeginForm("Index", "Student", FormMethod.Post))
{
    <span>Student Name:</span> @Html.TextBox("str")
    <input type="submit" value="Search" />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dob)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reg_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AL_stream)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reg_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AL_stream)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
